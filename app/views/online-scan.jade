extends layout
block body
    <!-- build:js(dist/app/public) /js/main-1.min.js -->
    script(src='/js/online-scan.js')
    script(src='/js/assets/lodash.min.js')
    <!-- endbuild -->    
    .row
      .col-md-6
        form.form(role='form', action='/scan/new')
          h1 Online Security Audit
          .form-group
            label
              | Website URL
              .input-group
                span.input-group-addon http://
                input#url.form-control.input-lg.btn-space(type='http', placeholder='example.com', protocol='http', required='true')
          .form-group
            label
              | First Name
              input#firstName.form-control.input-lg.btn-space(type='text', placeholder='John', required='true')
            label
              | Last Name
              input#lastName.form-control.input-lg.btn-space(type='text', placeholder='Doe', required='true')
          .form-group
            label
              | Email
              .input-group
                input#email.form-control.input-lg.btn-space.text-righ(type='text', placeholder='john.doe', required='true')
                span#domain.input-group-addon @example.com
          .form-group
            label
              | Round
              select#round.form-control.input-lg
                option(value="0") 0 (Quick Scan - $0)
                option(value="1", disabled=true) 1 (Full Scan - $199)
                option(value="2", disabled=true) 2 (Human Penetrationn Testing - $999)
                option(value="3", disabled=true) 3 (Weekly Monitoring - $999/yr)
                option(value="4", disabled=true) 4 (Bug Bounty program - $2999)
          .form-group
            label
              | Scan type
              select#scanType.form-control.input-lg
                option(value="wordpress") Wordpress Vulnerability Scan
                option(value="joomla") Joomla Vulnerability Scan
                option(value="drupal") Drupal Vulnerability Scan
                option(value="website") Website Vulnerability Scan
                option(value="webserver") Web Server Vulnerability Scan
          .form-group
            label
              | Coupon Code
              input#coupon.form-control.input-lg.btn-space.text-righ(type='text')
          //.form-group
          // input.form-control.btn-space(type='scan-type', placeholder='Type of scan')  
          .checkbox
           label.control-label
             input#agreed.has-warning(type='checkbox', required='true')
             | I've read, understood and agree to 
             a(href="/rules/terms-and-conditions") SOFTSKY Terms and Conditions

          .alert(role='alert')
          button.btn.btn-lg.btn-space.btn-success(type='submit') Start Scan
          .scan-result
            dl
      .clearfix.visible-xs-block
      .col-md-6.col-sm-3
        img#screenshot(style='width:100%')
